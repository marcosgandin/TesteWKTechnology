unit Model.Pedidos.Dados.Gerais;

interface

uses
  Windows, SysUtils, Classes, Controls, Forms, ComCtrls,
  Firedac.Stan.Param, FireDAC.Comp.Client, Data.DB, unit_funcoes;

type
  TPedidosDadosGerais = class
    private
      FConexao: TFdConnection;
      FId_Ped_Dados_Gerais : Integer;
      FPdg_Dt_Emissao : TDate;
      FPdg_Vl_Total : Double;
      FId_Clientes : Integer;
    public
      property Conexao: TFdConnection read FConexao write FConexao;
      property Id_Ped_Dados_Gerais : Integer read FId_Ped_Dados_Gerais write FId_Ped_Dados_Gerais;
      property Pdg_Dt_Emissao : TDate read FPdg_Dt_Emissao write FPdg_Dt_Emissao;
      property Pdg_Vl_Total : Double read FPdg_Vl_Total write FPdg_Vl_Total;
      property Id_Clientes : Integer read FId_Clientes write FId_Clientes;

      constructor Create( Conexao: TFdConnection);
      destructor Destroy; override;

      procedure Salvar(objPedDadosGerais: TPedidosDadosGerais);
      function fnc_inserir_alterar( TipoOperacao: string; out Erro: string ): Boolean;
  end;

var
  QryConsulta: TFDQuery;

implementation

{ TPedidosDadosGerais }

constructor TPedidosDadosGerais.Create(Conexao: TFdConnection);
begin
  FConexao := Conexao;

  QryConsulta := TFDQuery.Create( nil );
  QryConsulta.Connection := FConexao;
end;

destructor TPedidosDadosGerais.Destroy;
begin
  QryConsulta.Destroy;
  inherited;
end;

function TPedidosDadosGerais.fnc_inserir_alterar(TipoOperacao: string;
  out Erro: string): Boolean;
var
  QryInserir: TFDQuery;
begin
  try
    try
      FConexao.Connected := False;
      FConexao.Connected := True;

      QryInserir := TFDQuery.Create( nil );
      QryInserir.Connection := FConexao;

      QryInserir.Close;
      QryInserir.SQL.Clear;

      if TipoOperacao = 'INSERIR' then
      begin
        QryInserir.SQL.Add('Insert into pedidos_dados_gerais (id_ped_dados_gerais, pdg_dt_emissao, pdg_vl_total, id_clientes) ');
        QryInserir.SQL.Add('Values (:p_id_ped_dados_gerais, :p_pdg_dt_emissao, :p_pdg_vl_total, :p_id_clientes) ');

        QryInserir.ParamByName('p_id_ped_dados_gerais').AsInteger := fnc_proximo_codigo('pedidos_dados_gerais','id_ped_dados_gerais');
      end
      else
      begin
        QryInserir.SQL.Add('Update pedidos_dados_gerais set ');
        QryInserir.SQL.Add('  pdg_dt_emissao = :p_pdg_dt_emissao, ');
        QryInserir.SQL.Add('  pdg_vl_total   = :p_pdg_vl_total, ');
        QryInserir.SQL.Add('  id_clientes    = :p_id_clientes ');
        QryInserir.SQL.Add('Where id_ped_dados_gerais = :p_id_ped_dados_gerais ');

        QryInserir.ParamByName('p_id_ped_dados_gerais').AsInteger := FId_Ped_Dados_Gerais;
      end;

      QryInserir.ParamByName('pdg_dt_emissao').AsDate := FPdg_Dt_Emissao;
      QryInserir.ParamByName('pdg_vl_total').AsFloat  := FPdg_Vl_Total;
      QryInserir.ParamByName('id_clientes').AsInteger := FId_Clientes;
      QryInserir.ExecSQL;

      Result := True;
    except
      on E : Exception do
      begin
        Erro := E.Message;
        Result := False;
      end;
    end;
  finally
    QryInserir.Destroy;
  end;
end;

procedure TPedidosDadosGerais.Salvar(objPedDadosGerais: TPedidosDadosGerais);
var
  QryInserir: TFDQuery;
begin
  try
    try
      FConexao.Connected := False;
      FConexao.Connected := True;

      QryInserir := TFDQuery.Create( nil );
      QryInserir.Connection := FConexao;

      QryInserir.Close;
      QryInserir.SQL.Clear;
      QryInserir.SQL.Add('Insert into pedidos_dados_gerais (id_ped_dados_gerais, pdg_dt_emissao, pdg_vl_total, id_clientes) ');
      QryInserir.SQL.Add('Values (:p_id_ped_dados_gerais, :p_pdg_dt_emissao, :p_pdg_vl_total, :p_id_clientes) ');
      QryInserir.ParamByName('p_id_ped_dados_gerais').AsInteger := fnc_proximo_codigo('pedidos_dados_gerais','id_ped_dados_gerais');
      QryInserir.ParamByName('pdg_dt_emissao').AsDate := FPdg_Dt_Emissao;
      QryInserir.ParamByName('pdg_vl_total').AsFloat  := FPdg_Vl_Total;
      QryInserir.ParamByName('id_clientes').AsInteger := FId_Clientes;
      QryInserir.ExecSQL;
    except
      on E : Exception do
        raise Exception.Create(E.Message);
    end;
  finally
    QryInserir.Destroy;
  end;
end;

end.
